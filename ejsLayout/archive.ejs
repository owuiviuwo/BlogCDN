<div class="blank" style="padding-top: 75px;">
</div>
<link rel="stylesheet" href="/css/donate.css">
<div class="pattern-center ">
  <div class="pattern-attachment-img">
    <img src="https://cdn.jsdelivr.net/gh/owuiviuwo/BlogCDN@main/img/banner/archive.webp" src="<%- theme.lazyloadImg%>" data-src="https://cdn.jsdelivr.net/gh/owuiviuwo/BlogCDN@main/img/banner/archive.webp" class="lazyload" onerror="imgError(this,3)" style="width: 100%; height: 100%; object-fit: cover; pointer-events: none;">
  </div>
  <header class="pattern-header ">
    <h1 class="entry-title">归档</h1>
	
  </header>
</div>
<div id="content" class="site-content maxLength1000">
  <div id="main">
    <header class="page-header">
      <h1 class="cat-title">
      归档</h1>
      <span class="cat-des">
        <p>
        Archives</p>
      </span>
	  <style type="text/css">
        #contentss {
        position: relative;
		margin:0 auto;
        }
		#contentss .archive-calendar{
			margin:0 auto;		
			margin-top:-30px;
			margin-bottom:30px;
			
		}
		#archives{
			margin-bottom:10px;
		}
		
		.maxLength1000{
			max-width:1000px !important;
		}
		#colophon{
			max-width:1000px !important;
		}
    </style>
    </header>

    <div id="main-part">
			<div id="contentss">
	<%- partial('_widget/post-calendar') %>
	</div>
	
	<!--post-calenda与category-radar不能在同一页中共存，不然需要修改class名，有点麻烦的-->
    <!--<div class="my-category-radar">
	<%- partial('_widget/category-radar') %>
	</div>-->

      <article class="art">
        <div class="art-main">
          <div class="art-content">
            <div id="archives">
              <p style="text-align:right;">
                [<span id="al_expand_collapse" style="cursor: s-resize;">
                全部展开/收缩</span>
              ]</p>
              <% var lastYear; var lastMonth; %>
              <% site.posts.sort('date', theme.homePageSortType).each(function(post, i){ %>
              <% var currentYear = parseInt(date(post.date, 'YYYY')); %>
              <% var currentMonth = parseInt(date(post.date, 'YYYYMM')); %>
              <% if (lastYear != currentYear){ %>
                <% lastYear = currentYear; %>
                <h3 class="al_year"><%= date(post.date, 'YYYY') %>年</h3>
              <% } %>
              <% if (lastMonth != currentMonth){ %>
                <% lastMonth = currentMonth; %>
                <ul class="al_mon_list">
                  <li class="al_li">
                    <span class="al_mon" style="cursor: s-resize;">
                      <%= date(post.date, 'MM') %>月(<span id="post-num">
                      3</span>
                    篇文章)</span>
                    <ul class="al_post_list" style="">
              <% } %>
                      <li>
                        <a href="<%- url_for(post.path) %>">
                          <span style="color:#0bf;">
                          <%= date(post.date, 'DD') %>日<%= time(post.date) %></span>
                          <%= post.title %>
                        </a>
                      </li>
                      <% if (!site.posts.sort('date', theme.homePageSortType).eq(i + 1) || currentMonth != parseInt(date(site.posts.sort('date', theme.homePageSortType).eq(i + 1).date, 'YYYYMM'))){ %>
                    </ul>
                  </li>
                </ul>
              <% } %>
              <% }) %>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
